<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="MysqlContext" targetRuntime="MyBatis3Simple" defaultModelType="flat">

        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <commentGenerator>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/init"
                        userId="root"
                        password="root">
        </jdbcConnection>

        <!-- 生成的实体类 domain -->
        <javaModelGenerator targetPackage="com.whd.initialize.domain" targetProject="D:\initWork\initialize\src\main\java">
            <property name="trimStrings" value="false" />
        </javaModelGenerator>

        <!-- 生成的mapper的XML文件 -->
        <sqlMapGenerator targetPackage="mybatis.mapper"  targetProject="D:\initWork\initialize\src\main\resources"/>

        <!-- 生成的DAO mapper接口 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.whd.initialize.mapper"  targetProject="D:\initWork\initialize\src\main\java"/>

        <table tableName="%">
            <generatedKey column="id" sqlStatement="Mysql"/>
        </table>
    </context>
</generatorConfiguration>